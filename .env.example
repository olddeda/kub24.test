# Application
APP_NAME="Kub24 Test App"
APP_ENV=dev
APP_DEBUG=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kub24_test
DB_USERNAME=postgres
DB_PASSWORD=password

# Security
COOKIE_VALIDATION_KEY=your-secret-key-here

# URLs
BASE_URL=http://localhost:8080

# Email (optional)
MAIL_USE_FILE_TRANSPORT=true

# Option 1: Use DSN (recommended)
MAIL_DSN=smtp://username:password@localhost:587

# Option 2: Use separate parameters (fallback)
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# Cache
CACHE_CLASS=yii\caching\FileCache

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PASSWORD=

# Cache Settings
L1_CACHE_DURATION=60
L2_CACHE_DURATION=300
SCHEMA_CACHE_DURATION=3600
SCHEMA_CACHE_ENABLED=true

# Session
SESSION_TIMEOUT=3600

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRE=3600

# Application Email
ADMIN_EMAIL=admin@example.com
SENDER_EMAIL=noreply@example.com
SENDER_NAME="Kub24 Test App"
