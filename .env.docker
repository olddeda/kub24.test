# Application
APP_ENV=dev
APP_DEBUG=true
APP_NAME="Kub24 Test App"

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=kub24_test
DB_USERNAME=kub24_user
DB_PASSWORD=kub24_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0

# Security
COOKIE_VALIDATION_KEY=docker-secret-key-change-in-production

# URLs
BASE_URL=http://localhost:8080

# Cache
L1_CACHE_DURATION=60
L2_CACHE_DURATION=300

# Admin settings
ADMIN_EMAIL=admin@kub24.local
SENDER_EMAIL=noreply@kub24.local
SENDER_NAME="Kub24 Test App"
PASSWORD_RESET_TOKEN_EXPIRE=3600

# Email (for testing, use file transport in dev)
MAIL_USE_FILE_TRANSPORT=true
MAIL_DSN=smtp://localhost:1025
